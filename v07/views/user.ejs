<%- include ("partials/header") %> 
<div class="container">
    <!-- user profile card  -->
    <div class="card mt-4" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="/svg/person.svg" class="card-img p-2" alt="User image">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title"><%= currentUser.username %></h2>
            </div>
            </div>
        </div>
    </div>
    <!-- user campgrounds -->
    <div id="campground-grid" class="container">
    <h3>Your Campgrounds</h3>
        <div class="row">
            <% userCampgrounds.forEach(function(campground){ %>
                <div class=" col-md-4 col-sm-6 col-12">
                    <div class="card" id="camp-card">
                        <a href="/campgrounds/<%= campground._id %>">
                            <img class="card-img-top" src="<%= campground.image %> " alt="">
                            <div class="card-body p-0">
                                <h5 class="camp-card-title" id="camp-card-title">
                                    <%= campground.name %>
                                </h5>
                            </div>
                        </a>
                    </div>      
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include ("partials/footer") %>