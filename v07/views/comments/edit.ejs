<%- include ("../partials/header") %>
<div class="container">

    <form class="form-group" id="new-form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <h2 id="new-title">Edit comment on <%= campground_id.name %> </h2>
        
        <label class="col-form-label" for="comment[text]">Comment</label>
        <input class="form-control" autofocus type="text" name="comment[text]" value="<%= comment.text %> ">

        <div class="grid-container">
            <button class="btn btn-success">submit</button>
            <a class="btn-light btn" href="/campgrounds">Go Back</a>
        </div>

    </form>
</div>
